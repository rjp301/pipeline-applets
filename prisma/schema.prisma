generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  name     String?
  email    String
  password String

  centerlines Centerline[]
  topcon_runs TopconRun[]

  @@map("users")
}

model Centerline {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  name        String
  description String?
  line        Json
  markers     Json
  footprint   Json

  User   User?   @relation(fields: [userId], references: [id])
  userId String? @db.ObjectId

  @@map("centerlines")
}

// Topcon Volume Calculation
type TopconKP {
  beg Float
  end Float
  str String
}

type TopconDataPts {
  num       Float
  y         Float
  x         Float
  z         Float
  desc      String
  geometry  String
  chainage  Float
  depth     Float?
  slope     Float?
  width_bot Float?
  width_top Float?
  area      Float?
}

type TopconDataRng {
  KP_beg   Float
  KP_end   Float
  area_beg Float
  area_end Float
  area_avg Float
  length   Float
  volume   Float
}

model TopconRun {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt


  width_bot      Float
  slope          Float
  ditch_profile  String?
  ground_profile Json?
  total_volume   Float
  data_pts       TopconDataPts[]
  data_rng       TopconDataRng[]
  KP             TopconKP

  User   User?   @relation(fields: [userId], references: [id])
  userId String? @db.ObjectId

  @@map("topcon_runs")
}
