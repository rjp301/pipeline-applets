generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  name     String?
  email    String
  password String

  centerlines Centerline[]
  topcon_runs TopconRun[]

  @@map("users")
}

model Centerline {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  name        String
  description String?
  line        Json
  markers     Json
  footprint   Json

  User   User?   @relation(fields: [userId], references: [id])
  userId String? @db.ObjectId

  @@map("centerlines")
}

model TopconRun {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  width_bot      Float
  slope          Float
  ditch_profile  Json
  ground_profile Json
  data_pts       Json
  data_rng       Json
  KP_beg         Float
  KP_end         Float

  User   User?   @relation(fields: [userId], references: [id])
  userId String? @db.ObjectId

  @@map("topcon_runs")
}
